<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.AuthController">
	<children>
		<Label layoutX="198.0" layoutY="86.0" text="ChessNet">
			<font>
				<Font name="System Bold" size="144.0" />
			</font>
		</Label>
		<Label layoutX="483.0" layoutY="367.0" text="Login">
			<font>
				<Font size="24.0" />
			</font>
		</Label>
		<TextField fx:id="usernameField" layoutX="369.0"
			layoutY="415.0" prefHeight="36.0" prefWidth="287.0"
			promptText="Username">
			<font>
				<Font size="15.0" />
			</font>
		</TextField>
		<PasswordField fx:id="passwordField" layoutX="369.0"
			layoutY="457.0" prefHeight="36.0" prefWidth="287.0"
			promptText="Password">
			<font>
				<Font size="15.0" />
			</font>
		</PasswordField>
		<Button fx:id="loginBtn" layoutX="369.0" layoutY="498.0"
			mnemonicParsing="false" onAction="#login" prefHeight="36.0"
			prefWidth="287.0" text="Login">
		</Button>
		<Button fx:id="signUpBtn" layoutX="369.0" layoutY="540.0"
			mnemonicParsing="false" onAction="#signUp" prefHeight="36.0"
			prefWidth="287.0" text="Sign Up" />
		<Label fx:id="errorLbl" layoutX="369.0" layoutY="581.0"
			scaleShape="false" textFill="RED" visible="false" />
	</children>
</AnchorPane>
