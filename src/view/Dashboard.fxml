<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.DashboardController">
	<children>
		<Label fx:id="welcomeLbl" layoutX="24.0" layoutY="23.0"
			text="Welcome, username!">
			<font>
				<Font name="System Bold" size="21.0" />
			</font>
		</Label>
		<Button fx:id="historyBtn" layoutX="24.0" layoutY="73.0"
			mnemonicParsing="false" onAction="#showHistoryPage" prefHeight="36.0"
			prefWidth="193.0" text="Games History">
		</Button>
		<Button fx:id="profileBtn" layoutX="24.0" layoutY="113.0"
			mnemonicParsing="false" onAction="#showProfilePage" prefHeight="36.0"
			prefWidth="193.0" text="Profile" />
		<Button fx:id="aboutBtn" layoutX="24.0" layoutY="154.0"
			mnemonicParsing="false" onAction="#showAboutPage" prefHeight="36.0"
			prefWidth="193.0" text="About" />
		<Button fx:id="logoutBtn" layoutX="24.0" layoutY="194.0"
			mnemonicParsing="false" onAction="#logout" prefHeight="36.0"
			prefWidth="193.0" text="Logout" />
		<Label layoutX="263.0" layoutY="25.0" text="Play!">
			<font>
				<Font name="System Bold" size="18.0" />
			</font>
		</Label>
		<TextField fx:id="searchField" layoutX="263.0"
			layoutY="58.0" prefHeight="31.0" prefWidth="735.0"
			promptText="Search..." />
		<Button fx:id="requestBtn" layoutX="889.0" layoutY="17.0"
			mnemonicParsing="false" onAction="#requestGame" prefHeight="36.0"
			prefWidth="110.0" text="Request" />
		<TableView fx:id="usersTbl" layoutX="263.0" layoutY="94.0"
			prefHeight="405.0" prefWidth="735.0">
			<columns>
				<TableColumn prefWidth="245.0" text="Username">
					<cellValueFactory>
						<PropertyValueFactory property="username" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="245.0" text="# of Wins">
					<cellValueFactory>
						<PropertyValueFactory property="winsCount" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="243.0" text="# of loses">
					<cellValueFactory>
						<PropertyValueFactory property="losesCount" />
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
		<Label layoutX="24.0" layoutY="513.0" text="Scoreboard">
			<font>
				<Font name="System Bold" size="18.0" />
			</font>
		</Label>
		<TableView fx:id="scoreboardTbl" layoutX="25.0"
			layoutY="546.0" prefHeight="196.0" prefWidth="974.0">
			<columns>
				<TableColumn prefWidth="324.0" text="Username">
					<cellValueFactory>
						<PropertyValueFactory property="username" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="324.0" text="# of Wins">
					<cellValueFactory>
						<PropertyValueFactory property="winsCount" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="324.0" text="# of loses">
					<cellValueFactory>
						<PropertyValueFactory property="losesCount" />
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
	</children>
</AnchorPane>
