<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.ConnectController">
	<children>
		<Label layoutX="198.0" layoutY="86.0" text="ChessNet">
			<font>
				<Font name="System Bold" size="144.0" />
			</font>
		</Label>
		<Label layoutX="419.0" layoutY="367.0" text="Connect to server">
			<font>
				<Font size="24.0" />
			</font>
		</Label>
		<TextField fx:id="hostField" layoutX="369.0" layoutY="415.0"
			prefHeight="36.0" prefWidth="287.0" promptText="Host">
			<font>
				<Font size="15.0" />
			</font>
		</TextField>
		<TextField fx:id="portField" layoutX="369.0" layoutY="457.0"
			prefHeight="36.0" prefWidth="287.0" promptText="Port">
			<font>
				<Font size="15.0" />
			</font>
		</TextField>
		<Button fx:id="connectBtn" layoutX="369.0" layoutY="509.0"
			mnemonicParsing="false" onAction="#connect" prefHeight="36.0"
			prefWidth="287.0" text="Connect">
		</Button>
		<Label fx:id="errorLbl" layoutX="369.0" layoutY="555.0"
			scaleShape="false" textFill="RED" visible="false" />
	</children>
</AnchorPane>
